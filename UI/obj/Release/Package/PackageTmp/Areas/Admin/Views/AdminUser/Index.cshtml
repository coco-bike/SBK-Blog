@{
    Layout = "~/Areas/Admin/Views/Shared/SonLayout.cshtml";;
}
@section MySection{
<link href="~/Areas/Admin/Css/admin-user.css" rel="stylesheet" />
}
@section MySection1{
<script src="~/Areas/Admin/Scripts/admin-user.js"></script>
}
<table id="dg1" title="My Users" class="easyui-datagrid" style="width:100%;height:750px"
       url="../../Admin/AdminUser/GetAdminUserListData"
       toolbar="#toolbar"
       rownumbers="true" fitcolumns="true" singleselect="true" pagination="true">
    <thead>
        <div id="tb" style="padding:3px">
            <span>User Name:</span>
            <input id="username" style="line-height:26px;border:1px solid #ccc">
            <a href="#" class="easyui-linkbutton" plain="true" onclick="doSearch()">Search</a>
            <a href="#" class="easyui-linkbutton" plain="true" onclick="reset()">reset</a>
        </div>
        <tr>
            <th field="Name" sortable="false" width="50">Name</th>
            <th field="Type" sortable="false" width="50">Type</th>
            <th field="TelNumber" sortable="true" width="50">TelNumber</th>
            <th field="BuildTime" sortable="true" width="50">BuildTime</th>
            <th field="LoginTime" sortable="true" width="50">LoginTime</th>
            <th field="State" sortable="true" width="50">State</th>
            <th field="AdminRoles" sortable="true" width="50">AdminRoles</th>                        
        </tr>
    </thead>
</table>
<div id="toolbar">
    <a href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="newUser()">New User</a>
    <a href="#" class="easyui-linkbutton" iconcls="icon-edit" plain="true" onclick="editUser()">Edit User</a>
    <a href="#" class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="destroyUser()">Remove User</a>
</div>
<div id="dlg" class="easyui-dialog" style="width:400px;height:280px;padding:10px 20px"
     closed="true" buttons="#dlg-buttons">
    <div class="ftitle">User Information</div>
    <form id="fm" method="post">
        <div class="fitem">
            <label>Name:</label>
            <input id="Name" name="Name" class="easyui-validatebox" required="true">
        </div>
        <div class="fitem">
            <label>Type:</label>
            <input id="Type" name="Type" class="easyui-validatebox" required="true">
        </div>
        <div class="fitem">
            <label>TelNumber:</label>
            <input id="TelNumber" name="TelNumber" class="easyui-validatebox" required="true">
        </div>
        <div class="fitem">
            <label>AdminRoles:</label>
            <input class="easyui-combobox" name="Roles" id="Roles" data-options="
					url:'../../Admin/AdminUser/GetAdminRoleListData',
					method:'get',
					valueField:'id',
					textField:'name',
					panelHeight:'auto',
                    required:true
					">
        </div>
    </form>
</div>
<div id="dlg-buttons">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="saveUser()">Save</a>
    <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">Cancel</a>
</div>
